<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:id="@+id/ticket_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dip">
        <ImageView
            android:id="@+id/avatar_comment"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/default_image"/>
        <TextView
            android:id="@+id/name_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar_comment"
            android:paddingLeft="8dip"
            android:text="Ференс Евгений"/>
        <View
            android:id="@+id/get_author_prof_btn"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:tag="0"/>
        <TextView
            android:id="@+id/ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_comment"
            android:layout_toRightOf="@id/avatar_comment"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:paddingBottom="8dip"
            android:text="title"
            android:maxLines="3"/>
        <View
            android:id="@+id/title_msg_divider"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/ticket_title"
            android:background="#ccc" />
        <TextView
            android:id="@+id/ticket_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_msg_divider"
            android:paddingLeft="8dip"
            android:paddingBottom="8dip"
            android:text="message"
            android:maxLines="3"/>
        <View
            android:id="@+id/msg_date_divider"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/ticket_message"
            android:background="#ccc" />
        <TextView
            android:id="@+id/data_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/msg_date_divider"
            android:paddingTop="6dip"
            android:text="21/12/2014"/>
        <ImageView
            android:id="@+id/clock_comment"
            android:layout_below="@id/msg_date_divider"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:padding="4dip"
            android:layout_toLeftOf="@id/data_comment"
            android:src="@android:drawable/ic_btn_speak_now"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticket_info"
        android:background="#eee"
        android:paddingTop="8dip">
        <EditText
            android:id="@+id/comment_text"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:padding="4dip"
            android:background="#fff"/>
        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_text"
            android:layout_alignParentRight="true"
            android:text="Отправить"
            android:layout_marginTop="7dip"
            android:layout_marginBottom="4dip"
            android:tag="1"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/loc_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/loc_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
</RelativeLayout>